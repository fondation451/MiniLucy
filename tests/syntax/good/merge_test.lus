node merge_bool_alt(clk : bool ; i1 : int when True(clk) ; i2 : int when False(clk))
returns (y: int);
let
  y = merge clk (True -> i1) (False -> i2);
tel

node merge_bool_ter(clk : bool ; i1 : int when True(clk) ; i2 : int when False(clk))
returns (y: int);
let
  y = merge clk (False -> i2) (True -> i1) ;
tel
